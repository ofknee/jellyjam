      <img src="/logos/pico8.svg" alt="Sponsor" class="h-8 hover:scale-110 transition-transform" />
    </div>
  </section>
  
  <section id="rules" class="py-40 bg-gradient-to-b from-transparent via-jelly-blue/5 to-transparent mt-24">
